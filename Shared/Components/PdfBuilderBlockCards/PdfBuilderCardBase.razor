@using PdfApp.Shared.Models
@using PdfApp.Shared.Models.PdfBuilderElements

<MudCard Outlined="true">
    <MudCardHeader>
        <MudText Typo="Typo.h6">@ItemData.Name</MudText>
    </MudCardHeader>
    <MudCardContent>
        @BuildCardContent()
    </MudCardContent>
    <MudCardActions>
        <MudButtonGroup Variant="Variant.Filled">
            <MudButton StartIcon="@Icons.Material.Filled.ContentCopy" Color="Color.Success" OnClick="@(() => Callbacks.Duplicate(ItemData))"></MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Restore" Color="Color.Warning" OnClick="@OnRestoreClick"></MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => Callbacks.Delete(ItemData))"></MudButton>
        </MudButtonGroup>
    </MudCardActions>
</MudCard>

@code {

    [Parameter] [EditorRequired] public DropItem ItemData { get; set; } = null!;

    [Parameter] [EditorRequired] public PdfBuilderCardCallbacks Callbacks { get; set; } = null!;

}